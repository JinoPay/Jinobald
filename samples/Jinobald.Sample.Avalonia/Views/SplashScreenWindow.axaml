<Window
    x:Class="Jinobald.Sample.Avalonia.Views.SplashScreenWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="500"
    Height="300"
    Background="#2C2C2C"
    CanResize="False"
    SystemDecorations="None"
    WindowStartupLocation="CenterScreen">

    <Border Padding="40" Background="#2C2C2C">
        <StackPanel VerticalAlignment="Center" Spacing="20">
            <!--  앱 이름  -->
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="32"
                FontWeight="Bold"
                Foreground="White"
                Text="Jinobald Sample" />

            <!--  부제목  -->
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="16"
                Foreground="#CCCCCC"
                Text="MVVM Framework for Avalonia" />

            <!--  진행 메시지  -->
            <TextBlock
                Name="MessageTextBlock"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="#AAAAAA"
                Text="초기화 중..." />

            <!--  진행률 바  -->
            <ProgressBar
                Name="ProgressBar"
                Height="4"
                Margin="0,10,0,0"
                Background="#444444"
                Foreground="#007ACC"
                Maximum="100"
                Minimum="0"
                Value="0" />
        </StackPanel>
    </Border>
</Window>
