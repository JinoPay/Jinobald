<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Jinobald.Sample.Avalonia.Views.Dialogs"
             x:Class="Jinobald.Sample.Avalonia.Views.Dialogs.MessageDialogView"
             MinWidth="400"
             MaxWidth="600">

    <UserControl.Resources>
        <local:MessageTypeToIconConverter x:Key="MessageTypeToIconConverter" />
    </UserControl.Resources>

    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="24">

        <StackPanel Spacing="16">
            <!-- 제목 -->
            <StackPanel Spacing="8" Orientation="Horizontal">
                <!-- 아이콘 -->
                <TextBlock FontSize="24"
                           VerticalAlignment="Center"
                           Text="{Binding MessageType, Converter={StaticResource MessageTypeToIconConverter}}" />

                <TextBlock Text="{Binding Title}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- 메시지 -->
            <TextBlock Text="{Binding Message}"
                       TextWrapping="Wrap"
                       MaxWidth="550" />

            <!-- 버튼 -->
            <Button Content="확인"
                    Command="{Binding CloseCommand}"
                    HorizontalAlignment="Right"
                    MinWidth="100"
                    Margin="0,8,0,0" />
        </StackPanel>
    </Border>
</UserControl>
