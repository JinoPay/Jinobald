<UserControl
    x:Class="Jinobald.Sample.Avalonia.Views.Dialogs.MessageDialogView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialogs="clr-namespace:Jinobald.Sample.Avalonia.ViewModels.Dialogs"
    xmlns:local="clr-namespace:Jinobald.Sample.Avalonia.Views.Dialogs"
    MinWidth="400"
    MaxWidth="600">

    <UserControl.Resources>
        <local:MessageTypeToIconConverter x:Key="MessageTypeToIconConverter" />
    </UserControl.Resources>

    <Border
        Padding="24"
        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
        BorderThickness="1"
        CornerRadius="8">

        <StackPanel Spacing="16">
            <!--  제목  -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <!--  아이콘  -->
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="{Binding MessageType,
                                   Converter={StaticResource MessageTypeToIconConverter}}" />

                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="{Binding Title}" />
            </StackPanel>

            <!--  메시지  -->
            <TextBlock
                MaxWidth="550"
                Text="{Binding Message}"
                TextWrapping="Wrap" />

            <!--  버튼  -->
            <StackPanel
                Margin="0,8,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    MinWidth="100"
                    Command="{Binding OkCommand}"
                    Content="확인" />
                <Button
                    MinWidth="100"
                    Command="{Binding CancelCommand}"
                    Content="취소" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
