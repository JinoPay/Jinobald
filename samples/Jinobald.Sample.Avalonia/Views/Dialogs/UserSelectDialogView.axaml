<UserControl
    x:Class="Jinobald.Sample.Avalonia.Views.Dialogs.UserSelectDialogView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Jinobald.Sample.Avalonia.ViewModels.Dialogs"
    Width="400"
    Height="350">

    <Design.DataContext>
        <vm:UserSelectDialogViewModel />
    </Design.DataContext>

    <Border
        Padding="24"
        Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
        CornerRadius="8">
        <Grid RowDefinitions="Auto,*,Auto">
            <!--  Header  -->
            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Text="사용자 선택" />
                <TextBlock
                    FontSize="12"
                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                    Text="Generic IDialogResult&lt;UserInfo&gt; 데모" />
            </StackPanel>

            <!--  User List  -->
            <ListBox
                Grid.Row="1"
                ItemsSource="{Binding Users}"
                SelectedItem="{Binding SelectedUser}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="8,4">
                            <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                Text="{Binding Email}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  Buttons  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,16,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    Width="80"
                    Command="{Binding CancelCommand}"
                    Content="Cancel" />
                <Button
                    Width="80"
                    Classes="accent"
                    Command="{Binding ConfirmCommand}"
                    Content="Select"
                    IsEnabled="{Binding SelectedUser, Converter={x:Static ObjectConverters.IsNotNull}}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
