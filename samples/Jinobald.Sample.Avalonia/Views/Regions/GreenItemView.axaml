        BorderBrush="#4CAF50"
        BorderThickness="2"
        CornerRadius="8">
        <StackPanel Spacing="8">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="32"
                Text="ðŸŸ¢" />
