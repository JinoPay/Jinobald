<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.DialogDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Margin="16">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Dialog Demo" />

            <TextBlock
                Margin="0,8,0,0"
                Text="In-window overlay dialogs with async/await support."
                TextWrapping="Wrap" />

            <!--  메시지 다이얼로그 섹션  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Message Dialogs" />

                    <TextBlock
                        Margin="0,8,0,0"
                        Foreground="Gray"
                        Text="간단한 메시지를 표시하는 다이얼로그입니다."
                        TextWrapping="Wrap" />

                    <!--  버튼들  -->
                    <WrapPanel Margin="0,12,0,0">
                        <Button
                            MinWidth="120"
                            Margin="0,0,8,8"
                            Command="{Binding ShowInfoDialogCommand}"
                            Content="Info" />

                        <Button
                            MinWidth="120"
                            Margin="0,0,8,8"
                            Command="{Binding ShowSuccessDialogCommand}"
                            Content="Success" />

                        <Button
                            MinWidth="120"
                            Margin="0,0,8,8"
                            Command="{Binding ShowWarningDialogCommand}"
                            Content="Warning" />

                        <Button
                            MinWidth="120"
                            Margin="0,0,8,8"
                            Command="{Binding ShowErrorDialogCommand}"
                            Content="Error" />
                    </WrapPanel>

                    <!--  결과 표시  -->
                    <Border
                        Margin="0,8,0,0"
                        Padding="12"
                        Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="결과:" />
                            <TextBlock Text="{Binding LastDialogResult}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!--  확인 다이얼로그 섹션  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Confirm Dialogs" />

                    <TextBlock
                        Margin="0,8,0,0"
                        Foreground="Gray"
                        Text="Yes/No 선택을 제공하는 확인 다이얼로그입니다. ButtonResult를 사용합니다."
                        TextWrapping="Wrap" />

                    <Button
                        MinWidth="120"
                        Margin="0,12,0,0"
                        Command="{Binding ShowConfirmDialogCommand}"
                        Content="Confirm" />
                </StackPanel>
            </Border>

            <!--  중첩 다이얼로그 섹션  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Nested Dialogs" />

                    <TextBlock
                        Margin="0,8,0,0"
                        Foreground="Gray"
                        Text="다이얼로그 위에 또 다른 다이얼로그를 표시할 수 있습니다. (중첩 지원)"
                        TextWrapping="Wrap" />

                    <WrapPanel Margin="0,12,0,0">
                        <Button
                            MinWidth="150"
                            Margin="0,0,8,8"
                            Command="{Binding ShowNestedDialogCommand}"
                            Content="Show Nested Dialog" />

                        <Button
                            MinWidth="150"
                            Margin="0,0,8,8"
                            Command="{Binding ShowNestedTestDialogCommand}"
                            Content="Nested Test Dialog" />
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!--  기능 설명 섹션  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Features" />

                    <StackPanel Margin="12,8,0,0">
                        <TextBlock Text="- Async/await 기반 다이얼로그 서비스" Margin="0,4"/>
                        <TextBlock Text="- In-window overlay 방식 (모달 다이얼로그)" Margin="0,4"/>
                        <TextBlock Text="- 중첩 다이얼로그 지원 (다이얼로그 위에 다이얼로그)" Margin="0,4"/>
                        <TextBlock Text="- Prism 스타일 ButtonResult (OK, Cancel, Yes, No 등)" Margin="0,4"/>
                        <TextBlock Text="- IDialogAware 인터페이스 구현" Margin="0,4"/>
                        <TextBlock Text="- 파라미터 전달 및 결과 반환" Margin="0,4"/>
                        <TextBlock Text="- View-ViewModel 자동 매핑" Margin="0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  사용 예제  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Usage Example" />

                    <TextBlock
                        Margin="0,8,0,0"
                        xml:space="preserve"
                        FontFamily="Consolas"
                        FontSize="11"
                        TextWrapping="Wrap">var parameters = new DialogParameters
{
    { "Title", "알림" },
    { "Message", "메시지 내용" },
    { "MessageType", "Info" }
};

var result = await _dialogService
    .ShowDialogAsync&lt;MessageDialogView&gt;(parameters);</TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
