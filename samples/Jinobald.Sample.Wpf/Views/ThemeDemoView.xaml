<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.ThemeDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{DynamicResource BackgroundBrush}">

    <ScrollViewer>
        <StackPanel Margin="16">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Foreground="{DynamicResource ForegroundBrush}"
                Text="Theme Demo" />

            <TextBlock
                Margin="0,8,0,0"
                Foreground="{DynamicResource ForegroundSecondaryBrush}"
                Text="Dynamic theme switching with auto-save to settings."
                TextWrapping="Wrap" />

            <!--  테마 선택 섹션  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Theme Selection" />

                    <TextBlock
                        Margin="0,8,0,0"
                        Foreground="{DynamicResource ForegroundSecondaryBrush}"
                        Text="Click buttons to switch themes!"
                        TextWrapping="Wrap" />

                    <!--  테마 버튼들  -->
                    <WrapPanel Margin="0,12,0,0">
                        <Button
                            MinWidth="140"
                            Margin="0,0,8,8"
                            Padding="12,8"
                            Background="{DynamicResource PrimaryBrush}"
                            BorderThickness="0"
                            Command="{Binding SetLightThemeCommand}"
                            Content="Light Theme"
                            Foreground="White" />

                        <Button
                            MinWidth="140"
                            Margin="0,0,8,8"
                            Padding="12,8"
                            Background="{DynamicResource SecondaryBrush}"
                            BorderThickness="0"
                            Command="{Binding SetDarkThemeCommand}"
                            Content="Dark Theme"
                            Foreground="White" />
                    </WrapPanel>

                    <!--  현재 테마 표시  -->
                    <Border
                        Margin="0,8,0,0"
                        Padding="12"
                        Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource ForegroundSecondaryBrush}"
                                Text="Current Theme:" />
                            <TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="{DynamicResource AccentBrush}"
                                Text="{Binding CurrentThemeName}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!--  색상 팔레트 프리뷰  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Color Palette" />

                    <UniformGrid Columns="4" Margin="0,12,0,0">
                        <!--  Primary  -->
                        <StackPanel Margin="4">
                            <Border
                                Width="60" Height="60"
                                Background="{DynamicResource PrimaryBrush}"
                                CornerRadius="4" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="Primary" />
                        </StackPanel>

                        <!--  Secondary  -->
                        <StackPanel Margin="4">
                            <Border
                                Width="60" Height="60"
                                Background="{DynamicResource SecondaryBrush}"
                                CornerRadius="4" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="Secondary" />
                        </StackPanel>

                        <!--  Accent  -->
                        <StackPanel Margin="4">
                            <Border
                                Width="60" Height="60"
                                Background="{DynamicResource AccentBrush}"
                                CornerRadius="4" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="Accent" />
                        </StackPanel>

                        <!--  Surface  -->
                        <StackPanel Margin="4">
                            <Border
                                Width="60" Height="60"
                                Background="{DynamicResource SurfaceBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="Surface" />
                        </StackPanel>

                        <!--  Background  -->
                        <StackPanel Margin="4">
                            <Border
                                Width="60" Height="60"
                                Background="{DynamicResource BackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="Background" />
                        </StackPanel>

                        <!--  Foreground  -->
                        <StackPanel Margin="4">
                            <Border
                                Width="60" Height="60"
                                Background="{DynamicResource ForegroundBrush}"
                                CornerRadius="4" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="Foreground" />
                        </StackPanel>

                        <!--  Foreground Secondary  -->
                        <StackPanel Margin="4">
                            <Border
                                Width="60" Height="60"
                                Background="{DynamicResource ForegroundSecondaryBrush}"
                                CornerRadius="4" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="Fg Secondary" />
                        </StackPanel>

                        <!--  Border  -->
                        <StackPanel Margin="4">
                            <Border
                                Width="60" Height="60"
                                Background="{DynamicResource BorderBrush}"
                                CornerRadius="4" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0"
                                FontSize="11"
                                Foreground="{DynamicResource ForegroundBrush}"
                                Text="Border" />
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!--  샘플 UI 요소들  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="Sample UI Elements" />

                    <StackPanel Margin="0,12,0,0">
                        <TextBlock
                            Foreground="{DynamicResource ForegroundBrush}"
                            Text="Regular Text"
                            Margin="0,4"/>
                        <TextBlock
                            Foreground="{DynamicResource ForegroundSecondaryBrush}"
                            Text="Secondary Text"
                            Margin="0,4"/>
                        <TextBox
                            Text="TextBox Example"
                            Padding="8,4"
                            Margin="0,4"/>
                        <CheckBox
                            Foreground="{DynamicResource ForegroundBrush}"
                            Content="CheckBox Example"
                            IsChecked="True"
                            Margin="0,4"/>
                        <RadioButton
                            Foreground="{DynamicResource ForegroundBrush}"
                            Content="RadioButton Example"
                            IsChecked="True"
                            Margin="0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
