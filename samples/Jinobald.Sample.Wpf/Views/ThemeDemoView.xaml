<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.ThemeDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Margin="16">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Theme Demo" />

            <TextBlock
                Margin="0,8,0,0"
                Text="Dynamic theme switching with auto-save to settings."
                TextWrapping="Wrap" />

            <!--  테마 선택 섹션  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Theme Selection" />

                    <TextBlock
                        Margin="0,8,0,0"
                        Foreground="Gray"
                        Text="애플리케이션의 테마를 변경할 수 있습니다."
                        TextWrapping="Wrap" />

                    <!--  테마 버튼들  -->
                    <WrapPanel Margin="0,12,0,0">
                        <Button
                            MinWidth="140"
                            Margin="0,0,8,8"
                            Command="{Binding SetLightThemeCommand}"
                            Content="Light Theme" />

                        <Button
                            MinWidth="140"
                            Margin="0,0,8,8"
                            Command="{Binding SetDarkThemeCommand}"
                            Content="Dark Theme" />
                    </WrapPanel>

                    <!--  현재 테마 표시  -->
                    <Border
                        Margin="0,8,0,0"
                        Padding="12"
                        Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                        BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="현재 테마:" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="{Binding CurrentThemeName}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!--  테마 프리뷰 섹션  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Theme Preview" />

                    <TextBlock
                        Margin="0,8,0,0"
                        Foreground="Gray"
                        Text="다양한 UI 요소들이 현재 테마에 따라 어떻게 보이는지 확인할 수 있습니다."
                        TextWrapping="Wrap" />

                    <!--  샘플 UI 요소들  -->
                    <StackPanel Margin="0,12,0,0">
                        <TextBlock Text="텍스트 요소" Margin="0,4"/>
                        <Button Content="Primary Button" Margin="0,4"/>
                        <TextBox Text="TextBox 예제" Margin="0,4"/>
                        <CheckBox Content="CheckBox 예제" IsChecked="True" Margin="0,4"/>
                        <RadioButton Content="RadioButton 예제" IsChecked="True" Margin="0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  기능 설명 섹션  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Features" />

                    <StackPanel Margin="12,8,0,0">
                        <TextBlock Text="- Light/Dark 테마 지원" Margin="0,4"/>
                        <TextBlock Text="- 설정 자동 저장 (SettingsService 통합)" Margin="0,4"/>
                        <TextBlock Text="- 커스텀 테마 등록 가능" Margin="0,4"/>
                        <TextBlock Text="- GetThemeColor / GetThemeResource API" Margin="0,4"/>
                        <TextBlock Text="- ThemeChanged 이벤트 지원" Margin="0,4"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  사용 예제  -->
            <Border
                Margin="0,16,0,0"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="Usage Example" />

                    <TextBlock
                        Margin="0,8,0,0"
                        xml:space="preserve"
                        FontFamily="Consolas"
                        FontSize="11"
                        TextWrapping="Wrap">// 테마 변경
_themeService.SetTheme("Dark");

// 현재 테마 확인
var current = _themeService.CurrentTheme;

// 테마 변경 이벤트 구독
_themeService.ThemeChanged += OnThemeChanged;</TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
