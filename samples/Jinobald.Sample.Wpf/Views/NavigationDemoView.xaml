<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.NavigationDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>
        <TextBlock
            FontSize="24"
            FontWeight="Bold"
            Text="Navigation Demo" />

        <TextBlock
            Margin="0,8,0,0"
            Text="This demonstrates Region-based navigation with history and lifecycle management."
            TextWrapping="Wrap" />

        <TextBlock
            Margin="0,16,0,0"
            FontWeight="SemiBold"
            Text="Features:" />

        <StackPanel Margin="16,8,0,0">
            <TextBlock Text="- Async navigation with CancellationToken" Margin="0,4"/>
            <TextBlock Text="- Navigation guards (INavigationAware)" Margin="0,4"/>
            <TextBlock Text="- History management (Back/Forward)" Margin="0,4"/>
            <TextBlock Text="- Lifecycle hooks (IInitializableAsync, IActivatable)" Margin="0,4"/>
            <TextBlock Text="- Convention-based View resolution" Margin="0,4"/>
        </StackPanel>
    </StackPanel>
</UserControl>
