<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.Dialogs.NestedTestDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinWidth="450"
    MaxWidth="650">

    <Border
        Padding="24"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
        BorderThickness="1"
        CornerRadius="8">

        <StackPanel>
            <!--  제목  -->
            <StackPanel Orientation="Horizontal">
                <!--  중첩 아이콘  -->
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="[+]" />

                <TextBlock
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="{Binding Title}" />

                <!--  레벨 표시  -->
                <Border
                    Margin="8,0,0,0"
                    Padding="8,4"
                    VerticalAlignment="Center"
                    Background="#FF4CAF50"
                    CornerRadius="12">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding Level, StringFormat='레벨 {0}'}" />
                </Border>
            </StackPanel>

            <!--  메시지  -->
            <TextBlock
                Margin="0,16,0,0"
                MaxWidth="600"
                Text="{Binding Message}"
                TextWrapping="Wrap" />

            <!--  안내  -->
            <Border
                Margin="0,16,0,0"
                Padding="12"
                Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                CornerRadius="4">
                <TextBlock
                    FontSize="12"
                    Foreground="Gray"
                    Text="TIP: '새 다이얼로그 호출' 버튼을 눌러서 중첩 다이얼로그를 테스트해보세요!"
                    TextWrapping="Wrap" />
            </Border>

            <!--  버튼  -->
            <StackPanel
                Margin="0,24,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    MinWidth="150"
                    Command="{Binding OpenNestedDialogCommand}"
                    Content="새 다이얼로그 호출" />
                <Button
                    MinWidth="100"
                    Margin="8,0,0,0"
                    Command="{Binding CloseDialogCommand}"
                    Content="닫기" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
