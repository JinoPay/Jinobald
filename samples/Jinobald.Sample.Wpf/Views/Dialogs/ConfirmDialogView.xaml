<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.Dialogs.ConfirmDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinWidth="400"
    MaxWidth="600">

    <Border
        Padding="24"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
        BorderThickness="1"
        CornerRadius="8">

        <StackPanel>
            <!--  제목  -->
            <StackPanel Orientation="Horizontal">
                <!--  질문 아이콘  -->
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="24"
                    Text="?" />

                <TextBlock
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="{Binding Title}" />
            </StackPanel>

            <!--  메시지  -->
            <TextBlock
                Margin="0,16,0,0"
                MaxWidth="550"
                Text="{Binding Message}"
                TextWrapping="Wrap" />

            <!--  버튼  -->
            <StackPanel
                Margin="0,24,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    MinWidth="100"
                    Command="{Binding YesCommand}"
                    Content="예" />
                <Button
                    MinWidth="100"
                    Margin="8,0,0,0"
                    Command="{Binding NoCommand}"
                    Content="아니오" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
