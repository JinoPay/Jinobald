<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.Dialogs.UserSelectDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="400"
    Height="350">

    <Border
        Padding="24"
        Background="{DynamicResource SurfaceBrush}"
        CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <StackPanel Grid.Row="0" Margin="0,0,0,16">
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Text="사용자 선택" />
                <TextBlock
                    FontSize="12"
                    Opacity="0.7"
                    Text="Generic IDialogResult&lt;UserInfo&gt; 데모" />
            </StackPanel>

            <!--  User List  -->
            <ListBox
                Grid.Row="1"
                ItemsSource="{Binding Users}"
                SelectedItem="{Binding SelectedUser}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="8,4">
                            <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                            <TextBlock
                                FontSize="12"
                                Opacity="0.7"
                                Text="{Binding Email}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  Buttons  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,16,0,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="0,0,8,0"
                    Command="{Binding CancelCommand}"
                    Content="Cancel" />
                <Button
                    Width="80"
                    Command="{Binding ConfirmCommand}"
                    Content="Select"
                    IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToBoolConverter}}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
