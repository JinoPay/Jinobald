<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.Regions.RedItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border
        MinWidth="200"
        MinHeight="120"
        Margin="4"
        Padding="16"
        Background="#FFEBEE"
        BorderBrush="#F44336"
        BorderThickness="2"
        CornerRadius="8">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="32"
                Foreground="#C62828"
                Text="[R]" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="#C62828"
                Text="{Binding Title}" />
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="#B71C1C"
                Text="{Binding Description}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>
