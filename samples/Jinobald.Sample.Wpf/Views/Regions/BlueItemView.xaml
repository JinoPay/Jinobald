<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.Regions.BlueItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border
        MinWidth="200"
        MinHeight="120"
        Margin="4"
        Padding="16"
        Background="#E3F2FD"
        BorderBrush="#2196F3"
        BorderThickness="2"
        CornerRadius="8">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="32"
                Foreground="#1565C0"
                Text="[B]" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="#1565C0"
                Text="{Binding Title}" />
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="#0D47A1"
                Text="{Binding Description}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>
