<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.Regions.GreenItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border
        MinWidth="200"
        MinHeight="120"
        Margin="4"
        Padding="16"
        Background="#E8F5E9"
        BorderBrush="#4CAF50"
        BorderThickness="2"
        CornerRadius="8">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="32"
                Foreground="#2E7D32"
                Text="[G]" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="#2E7D32"
                Text="{Binding Title}" />
            <TextBlock
                HorizontalAlignment="Center"
                Foreground="#1B5E20"
                Text="{Binding Description}"
                TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>
