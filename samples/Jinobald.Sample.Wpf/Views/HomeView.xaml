<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="32"
            FontWeight="Bold"
            Text="Welcome to Jinobald!" />

        <TextBlock
            Margin="0,8,0,24"
            HorizontalAlignment="Center"
            FontSize="18"
            Foreground="Gray"
            Text="Cross-Platform MVVM Framework" />

        <TextBlock
            FontSize="16"
            FontWeight="SemiBold"
            Text="Features:" />

        <StackPanel Margin="32,8,0,0">
            <TextBlock Text="- DI Container (Prism 스타일)" Margin="0,4"/>
            <TextBlock Text="- Navigation Service (비동기, 히스토리)" Margin="0,4"/>
            <TextBlock Text="- Event Aggregator (Thread-safe)" Margin="0,4"/>
            <TextBlock Text="- Dialog Service (In-window overlay)" Margin="0,4"/>
            <TextBlock Text="- Theme Service (동적 테마 변경)" Margin="0,4"/>
            <TextBlock Text="- Settings Service (자동 저장/로드)" Margin="0,4"/>
            <TextBlock Text="- Splash Screen (필수)" Margin="0,4"/>
        </StackPanel>

        <TextBlock
            Margin="0,24,0,0"
            HorizontalAlignment="Center"
            FontSize="14"
            Foreground="Gray"
            Text="왼쪽 메뉴에서 데모를 선택하세요." />
    </StackPanel>
</UserControl>
