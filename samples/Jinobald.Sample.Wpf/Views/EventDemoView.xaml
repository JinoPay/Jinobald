<UserControl
    x:Class="Jinobald.Sample.Wpf.Views.EventDemoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Event Aggregator Demo" />

            <TextBlock
                Margin="0,8,0,16"
                Text="Pub/Sub loosely-coupled messaging between components."
                TextWrapping="Wrap" />

            <!--  메시지 이벤트 섹션  -->
            <Border
                Margin="0,0,0,16"
                Padding="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="MessageSentEvent" />

                    <TextBlock
                        Margin="0,8,0,12"
                        Foreground="{DynamicResource SecondaryForegroundBrush}"
                        Text="메시지를 발행하고 수신합니다."
                        TextWrapping="Wrap" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            Padding="8"
                            Text="{Binding MessageToSend, UpdateSourceTrigger=PropertyChanged}" />
                        <Button
                            Grid.Column="1"
                            MinWidth="80"
                            Padding="16,8"
                            Command="{Binding SendMessageCommand}"
                            Content="Send" />
                    </Grid>

                    <Border
                        Margin="0,12,0,0"
                        Padding="12"
                        Background="{DynamicResource BackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel>
                            <TextBlock
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Last Received:" />
                            <TextBlock
                                Margin="0,4,0,0"
                                Text="{Binding LastReceivedMessage, FallbackValue='(no message)'}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!--  카운터 이벤트 섹션  -->
            <Border
                Margin="0,0,0,16"
                Padding="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="CounterChangedEvent" />

                    <TextBlock
                        Margin="0,8,0,12"
                        Foreground="{DynamicResource SecondaryForegroundBrush}"
                        Text="카운터 값 변경을 이벤트로 전파합니다."
                        TextWrapping="Wrap" />

                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button
                            Width="50"
                            Height="50"
                            Margin="0,0,16,0"
                            Command="{Binding DecrementCounterCommand}"
                            Content="-"
                            FontSize="20" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="32"
                            FontWeight="Bold"
                            Text="{Binding Counter}" />
                        <Button
                            Width="50"
                            Height="50"
                            Margin="16,0,0,0"
                            Command="{Binding IncrementCounterCommand}"
                            Content="+"
                            FontSize="20" />
                    </StackPanel>

                    <Button
                        Margin="0,12,0,0"
                        HorizontalAlignment="Center"
                        Padding="16,8"
                        Command="{Binding ResetCounterCommand}"
                        Content="Reset to 0" />
                </StackPanel>
            </Border>

            <!--  상태 이벤트 섹션  -->
            <Border
                Margin="0,0,0,16"
                Padding="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="StatusUpdatedEvent" />

                    <TextBlock
                        Margin="0,8,0,12"
                        Foreground="{DynamicResource SecondaryForegroundBrush}"
                        Text="상태 변경 시 자동으로 이벤트가 발행됩니다."
                        TextWrapping="Wrap" />

                    <StackPanel Orientation="Horizontal">
                        <CheckBox
                            VerticalAlignment="Center"
                            Content="Online"
                            IsChecked="{Binding IsOnline}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  이벤트 로그  -->
            <Border
                Padding="16"
                Background="{DynamicResource SurfaceBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Text="Event Log" />
                        <Button
                            Grid.Column="1"
                            Padding="12,4"
                            Command="{Binding ClearLogCommand}"
                            Content="Clear" />
                    </Grid>

                    <ListBox
                        Height="200"
                        Margin="0,12,0,0"
                        Background="{DynamicResource BackgroundBrush}"
                        ItemsSource="{Binding EventLog}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    FontFamily="Consolas"
                                    FontSize="11"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
