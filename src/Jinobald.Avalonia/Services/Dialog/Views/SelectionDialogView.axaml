<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="Jinobald.Avalonia.Services.Dialog.SelectionDialogView">

    <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
            CornerRadius="8"
            Padding="24"
            MaxWidth="500"
            BoxShadow="0 8 32 0 #40000000">

        <StackPanel Spacing="16">
            <!-- 제목 -->
            <TextBlock Text="{Binding Title}"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" />

            <!-- 메시지 -->
            <TextBlock Text="{Binding Message}"
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" />

            <!-- 선택 목록 -->
            <ListBox ItemsSource="{Binding Items}"
                     SelectedItem="{Binding SelectedItem}"
                     MaxHeight="300"
                     Margin="0,8">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayText}"
                                   Padding="8" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- 버튼들 -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="8">
                <!-- 취소 버튼 -->
                <Button Content="취소"
                        Command="{Binding OnCancelCommand}"
                        MinWidth="100"
                        Padding="16,8" />

                <!-- 확인 버튼 -->
                <Button Content="확인"
                        Command="{Binding OnConfirmCommand}"
                        MinWidth="100"
                        Padding="16,8"
                        IsEnabled="{Binding SelectedItem, Converter={x:Static ObjectConverters.IsNotNull}}" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
