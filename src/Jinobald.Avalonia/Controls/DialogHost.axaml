<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="using:Jinobald.Avalonia.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <controls:DialogHost>
            <TextBlock Text="Main Content" />
        </controls:DialogHost>
    </Design.PreviewWith>

    <Style Selector="controls|DialogHost">
        <Setter Property="Template">
            <ControlTemplate>
                <Grid>
                    <!--  메인 콘텐츠  -->
                    <ContentPresenter
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        Name="PART_ContentPresenter" />

                    <!--  다이얼로그 오버레이 (HasDialogs가 true일 때만 표시)  -->
                    <Grid IsVisible="{TemplateBinding HasDialogs}">
                        <!--  반투명 배경  -->
                        <Border Background="#80000000" />

                        <!--  다이얼로그 콘텐츠 스택  -->
                        <ItemsControl
                            ItemsSource="{TemplateBinding DialogStack}"
                            Name="PART_DialogStack"
                            VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Grid />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!--  다이얼로그를 중앙에 배치  -->
                                    <ContentControl
                                        Content="{Binding}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
