<Window x:Class="Jinobald.Wpf.Application.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Jinobald"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Border CornerRadius="8"
            Background="#F0F0F0"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Padding="32">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" />
        </Border.Effect>

        <StackPanel VerticalAlignment="Center">
            <!-- 로고/타이틀 영역 -->
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,24">
                <TextBlock Text="Jinobald"
                           FontSize="32"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#333333" />

                <TextBlock Text="MVVM Framework"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           Margin="0,8,0,0" />
            </StackPanel>

            <!-- 진행 메시지 -->
            <TextBlock x:Name="MessageTextBlock"
                       Text="초기화 중..."
                       FontSize="13"
                       HorizontalAlignment="Center"
                       Foreground="#666666"
                       Margin="0,16,0,8" />

            <!-- 진행률 바 -->
            <ProgressBar x:Name="ProgressBar"
                         Minimum="0"
                         Maximum="100"
                         Value="0"
                         Height="4"
                         Margin="0,8,0,0" />
        </StackPanel>
    </Border>
</Window>
