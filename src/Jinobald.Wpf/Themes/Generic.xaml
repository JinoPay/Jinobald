<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Jinobald.Wpf.Controls"
    xmlns:toast="clr-namespace:Jinobald.Toast;assembly=Jinobald.Toast">

    <!--  DialogHost 스타일  -->
    <Style TargetType="{x:Type controls:DialogHost}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DialogHost}">
                    <Grid>
                        <!--  메인 콘텐츠  -->
                        <ContentPresenter
                            x:Name="PART_ContentPresenter"
                            Content="{TemplateBinding Content}"
                            ContentTemplate="{TemplateBinding ContentTemplate}" />

                        <!--  다이얼로그 오버레이 (HasDialogs가 true일 때만 표시)  -->
                        <Grid x:Name="PART_DialogOverlay" Visibility="Collapsed">
                            <!--  반투명 배경  -->
                            <Border Background="#80000000" />

                            <!--  다이얼로그 콘텐츠 스택  -->
                            <ItemsControl
                                x:Name="PART_DialogStack"
                                VerticalAlignment="Center"
                                ItemsSource="{TemplateBinding DialogStack}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Grid />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!--  다이얼로그를 중앙에 배치  -->
                                        <ContentControl
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>

                    <!--  HasDialogs Trigger  -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasDialogs" Value="True">
                            <Setter TargetName="PART_DialogOverlay" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ToastHost 스타일  -->
    <Style TargetType="{x:Type controls:ToastHost}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ToastHost}">
                    <Grid>
                        <!--  토스트 컨테이너  -->
                        <ItemsControl ItemsSource="{TemplateBinding Toasts}"
                                      Margin="16">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <!--  기본 토스트 템플릿 (사용자가 ItemTemplate을 설정하여 커스터마이징 가능)  -->
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type toast:ToastMessage}">
                                    <Border x:Name="ToastBorder"
                                            CornerRadius="8"
                                            Padding="16,12"
                                            MinWidth="250"
                                            MaxWidth="400"
                                            Margin="0,0,0,8">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#40000000"
                                                              BlurRadius="12"
                                                              ShadowDepth="4"
                                                              Opacity="0.25" />
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  콘텐츠  -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock x:Name="TitleTextBlock"
                                                           Text="{Binding Title}"
                                                           FontWeight="SemiBold"
                                                           FontSize="14" />
                                                <TextBlock Text="{Binding Message}"
                                                           FontSize="13"
                                                           TextWrapping="Wrap"
                                                           Margin="0,4,0,0" />
                                            </StackPanel>

                                            <!--  닫기 버튼 (플레이스홀더)  -->
                                            <Button Grid.Column="1"
                                                    Width="20"
                                                    Height="20"
                                                    Margin="12,0,0,0"
                                                    Padding="0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    VerticalAlignment="Top"
                                                    Content="×"
                                                    FontSize="18"
                                                    FontWeight="Bold" />
                                        </Grid>
                                    </Border>

                                    <DataTemplate.Triggers>
                                        <!--  Success  -->
                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static toast:ToastType.Success}">
                                            <Setter TargetName="ToastBorder" Property="Background" Value="#E8F5E9" />
                                            <Setter TargetName="ToastBorder" Property="BorderBrush" Value="#4CAF50" />
                                            <Setter TargetName="ToastBorder" Property="BorderThickness" Value="1" />
                                        </DataTrigger>

                                        <!--  Info  -->
                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static toast:ToastType.Info}">
                                            <Setter TargetName="ToastBorder" Property="Background" Value="#E3F2FD" />
                                            <Setter TargetName="ToastBorder" Property="BorderBrush" Value="#2196F3" />
                                            <Setter TargetName="ToastBorder" Property="BorderThickness" Value="1" />
                                        </DataTrigger>

                                        <!--  Warning  -->
                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static toast:ToastType.Warning}">
                                            <Setter TargetName="ToastBorder" Property="Background" Value="#FFF3E0" />
                                            <Setter TargetName="ToastBorder" Property="BorderBrush" Value="#FF9800" />
                                            <Setter TargetName="ToastBorder" Property="BorderThickness" Value="1" />
                                        </DataTrigger>

                                        <!--  Error  -->
                                        <DataTrigger Binding="{Binding Type}" Value="{x:Static toast:ToastType.Error}">
                                            <Setter TargetName="ToastBorder" Property="Background" Value="#FFEBEE" />
                                            <Setter TargetName="ToastBorder" Property="BorderBrush" Value="#F44336" />
                                            <Setter TargetName="ToastBorder" Property="BorderThickness" Value="1" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!--  Position별 정렬  -->
                        <Trigger Property="Position" Value="{x:Static toast:ToastPosition.TopRight}">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="VerticalAlignment" Value="Top" />
                        </Trigger>
                        <Trigger Property="Position" Value="{x:Static toast:ToastPosition.TopLeft}">
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Top" />
                        </Trigger>
                        <Trigger Property="Position" Value="{x:Static toast:ToastPosition.TopCenter}">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Top" />
                        </Trigger>
                        <Trigger Property="Position" Value="{x:Static toast:ToastPosition.BottomRight}">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="VerticalAlignment" Value="Bottom" />
                        </Trigger>
                        <Trigger Property="Position" Value="{x:Static toast:ToastPosition.BottomLeft}">
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="VerticalAlignment" Value="Bottom" />
                        </Trigger>
                        <Trigger Property="Position" Value="{x:Static toast:ToastPosition.BottomCenter}">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Bottom" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Converters  -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

</ResourceDictionary>
